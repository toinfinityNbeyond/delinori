<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.noriteo.delinori.security.mapper.MemberMapper">
    <resultMap id="memberMap" type="com.noriteo.delinori.security.domain.Member">
        <id property="mid" column="mid"></id>
        <result property="pw" column="pw"></result>
        <result property="name" column="name"></result>
        <result property="enabled" column="enabled"></result>
        <collection property="roleList" resultMap="memberRoleMap"></collection>
    </resultMap>


    <resultMap id="memberRoleMap" type="com.noriteo.delinori.security.domain.MemberRole">
        <result property="mid" column="mid"></result>
        <result property="role" column="role"></result>
    </resultMap>

<select id="findById" resultMap="memberMap">
    select * from tbl_member m inner join member_role mr on m.mid = mr.mid
    where m.mid = #{mid}
</select>

</mapper>